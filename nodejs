// install node/(nmp)
curl -sL https://deb.nodesource.com/setup_11.x | sudo -E bash -
sudo apt-get install -y nodejs

// instal n (change version node)
sudo npm install -g n

// Upgrade npm to the most recent release:
npm install -g npm@next

// cache clean
sudo npm cache clean -f

// switch node version
sudo n

// after reinstall npm (error in console). Reinstall node-sass
sudo npm i node-sass

// remove node js
sudo apt-get purge --auto-remove nodejs
sudo apt-get purge nodejs
sudo apt-get autoremove

// remove version node js
sudo n rm 4.2.0

-------------NVM------------

// install NVM (restart console)
wget -qO- https://raw.githubusercontent.com/creationix/nvm/v0.33.11/install.sh | bash
nvm install 11.6.0

// put in .zshrc (work with nvm)
export NVM_DIR="~/.nvm"
source ~/.nvm/nvm.sh

// remove nvm
rm -rf $NVM_DIR ~/.npm ~/.bower
rm -rf $NVM_DIR
nvm uninstall-nvm
sudo rm -rf ~/.nvm
-----------------------------
