// instal node js last version
sudo npm cache clean -f
sudo npm install -g n
sudo n stable

// install last version npm
sudo npm install -g n latest

// To install the latest release, use n latest. Alternatively, you can run n #.#.# to get a specific Node //version.
// install last version node js
sudo n stable

// switch node version
sudo n

// after reinstall npm (error in console). Reinstall node-sass
sudo npm i node-sass

// remove node js
sudo apt-get remove nodejs

// remove version node js
sudo n rm 4.2.0
