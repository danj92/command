// check packages in npm
▶ npm list --depth=0 
▶ npm list -g --depth=0 

// check single package
▶ npm view vusion-webfonts-generator version

// webpack-bundle-analyzer
▶ npm install --save-dev webpack-bundle-analyzer

add to package.json :
  "scripts": {
    ....
    "build": "ng build --aot",
    "build:stats": "ng build --prod --stats-json",
     ....
    "analyse": "webpack-bundle-analyzer dist/stats.json"
  },
---- or---- 
 "build:analyzer": "ng build --aot --prod --configuration=aws.production --stats-json && webpack-bundle-analyzer dist/stats.json",
---- or---- 
1) ▶ npm run build:stats
2) ▶ npm run analyse

